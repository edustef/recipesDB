<% include  partials/header.ejs %>

<h1><%= recipe.name %></h1>
<h2><%= recipe.article %></h2>
<hr>
<p><%= recipe.desc %></p>
<hr>
<% if (recipe.ytId) { %>
<div class="embed-responsive embed-responsive-16by9">
  <iframe class="embed-responsive-item video" src="https://www.youtube.com/embed/<%= recipe.ytId %>"
    allowfullscreen></iframe>
</div>
<% } %>
<h2>Comments</h2>
<hr>
<form action="/recipes/<% recipe._id %>" method="POST">
  <div class="form-group">
    <label for="">Post comment!</label>
    <textarea class="form-control" required id="comment" name="comment" rows="3"
      placeholder="Type your comment here..."></textarea>
  </div>
  <button class="btn btn-primary">Post comment</button>
</form>
<hr>
<% if (recipe.ytId) { %>
<% recipe.comments.forEach(comment => { %>
<div class="container">
  <img src="<%= comment.authorProfileImageUrl%>" style="display: inline">
  <h4 class="card-title"><%= comment.authorDisplayName%></h4>
  <p><%= comment.text %></p>
</div>
<hr>
<% }) %>
<% } %>
<form class="inline-form" action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
  <button class="btn btn-danger">DELETE RECIPE</button>
</form>

<% include  partials/footer.ejs %>
<% include  partials/header.ejs %>

<h1>Create new recipe manually</h1>
<p class="alert alert-info">
  Or if you have a <a class="ytURLModal" data-toggle="modal" data-target="#ytURLModal">YouTube URL</a> let me do the
  work for
  you!
</p>
<form action="/recipes" method="POST">
  <div class="form-group">
    <label for="name">Recipe name</label>
    <input class="form-control" type="text" id="name" name="recipe[name]" placeholder="Recipe name"><br>
  </div>

  <div class="form-group">
    <label for="desc">Description</label>
    <input class="form-control" type="text" id="desc" name="recipe[desc]" placeholder="Recipe description"><br>
  </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      <input class="form-control" type="text" id="image" name="recipe[image]" placeholder="Image URL"><br>
    </div>

  <div class="form-group">
    <label for="article">Article URL</label>
    <input class="form-control" type="text" id="article" name="recipe[article]" placeholder="Article URL"><br>
  </div>

  <button class="btn btn-primary">Submit!</button>
</form>
<hr>
<h1></h1>
<a class="btn btn-outline-primary btn-sm" href="/recipes">Go back</a>
</div>

<div class="modal fade" id="ytURLModal" tabindex="-1" role="dialog" aria-labelledby="Youtube URL" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <form action="/recipes" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalCenterTitle">Insert the YouTube URL of the recipe</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="ytURL">YouTube URL</label>
            <input class="form-control" type="text" id="ytURL" name="ytURL" placeholder="YouTube URL"><br>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Submit!</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>


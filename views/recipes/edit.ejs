<% include  ../partials/header %>

<h1>Edit <%= recipe.name %></h1>

<form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="name">Recipe name</label>
        <input class="form-control" type="text" id="name" name="recipe[name]" value="<%= recipe.name %>"
            placeholder="Recipe name"><br>
    </div>

    <div class="form-group">
        <label for="desc">Description</label>
        <textarea rows=8 class="form-control" type="text" id="desc" name="recipe[desc]"
            placeholder="Recipe description"><%= recipe.desc %></textarea><br>
    </div>

    <div class="form-group">
        <label for="image">Image URL</label>
        <input class="form-control" type="text" id="image" name="recipe[image]" value="<%= recipe.image %>"
            placeholder="Image URL"><br>
    </div>

    <div class="form-group">
        <label for="article">Article URL</label>
        <input class="form-control" type="text" id="article" name="recipe[article]" value="<%= recipe.article %>"
            placeholder="Article URL"><br>
    </div>

    <button class="btn btn-primary">Save!</button>
</form>
</div>

<% include  ../partials/footer %>